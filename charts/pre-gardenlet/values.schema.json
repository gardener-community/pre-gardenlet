{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "required": [
        "global"
    ],
    "properties": {
        "global": {
            "type": "object",
            "required": [
                "token"
            ],
            "properties": {
                "token": {
                    "type": "object",
                    "required": [
                        "id",
                        "secret"
                    ],
                    "properties": {
                        "id": {
                            "allOf": [
                              {
                                "type": "string",
                                "pattern": "^.{6}$"
                              },
                              {
                                "type": "string",
                                "pattern": "(.*)([a-e]+)(.*)"
                              }
                            ]
                        },
                        "secret": {
                            "allOf": [
                              {
                                "type": "string",
                                "pattern": "^.{16}$"
                              },
                              {
                                "type": "string",
                                "pattern": "(.*)([a-e]+)(.*)"
                              }
                            ]
                        }
                    }
                }
            }
        }
    }
}
